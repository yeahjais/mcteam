---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'MCBot - Your all in one MC Bot',
  description = 'MCBot is a Discord multipurpose bot targeted at the Minecraft community, featuring functionalities like server status and player lookup'
} = Astro.props;
---

<!DOCTYPE html>
<html data-bs-theme="dark" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>{title}</title>
    <meta name="keywords" content="minecraft status, hypixel bot, minecraft discord bot, minecraft server status, server bot, minecraft server status" />
    <meta name="theme-color" content="#8155a1" />
    <meta property="og:image" content="/assets/img/mcbot.png" />
    <meta name="description" content={description} />
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "http://schema.org",
        "@type": "WebSite",
        "name": "MCBot",
        "url": "https://mcbot.cloud"
      })}
    </script>
    <link rel="icon" type="image/png" sizes="1024x1024" href="https://mcbot.pages.dev/assets/img/mcbot.png" />
    <link rel="icon" type="image/png" sizes="1024x1024" href="https://mcbot.pages.dev/assets/img/mcbot.png" media="(prefers-color-scheme: dark)" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.3/dist/pulse/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css" />
    <link rel="stylesheet" href="/assets/css/styles.min.css" />
  </head>
  <body>
    <Navigation />
    <slot />
    <Footer />
    <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script is:inline src="/assets/js/script.min.js"></script>
  </body>
</html>
